<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.flash_card">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CardTestActivity"
            android:label="@string/title_activity_card_test"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CardStudyActivity"
            android:label="@string/title_activity_card_study"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CardListsActivity"
            android:label="@string/title_activity_card_lists"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ModeSelectionActivity"
            android:label="@string/title_activity_mode_selection"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CardEditActivity"
            android:label="@string/title_activity_card_edit"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>